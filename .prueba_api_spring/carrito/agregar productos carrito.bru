meta {
  name: agregar productos carrito
  type: http
  seq: 2
}

post {
  url: http://localhost:8080/api/v1/carritos/{{carritoId}}/productos
  body: json
  auth: inherit
}

body:json {
  {
    "productoId": "{{productoId}}",
    "nombreProducto": "string",
    "sku": "AAA-000",
    "cantidad": 10,
    "precioUnitario": 1,
    "moneda": "MXN"
  }
}

script:post-response {
  let data = res.getBody();
  let carritoId = data.carritoId;
  bru.setVar("carritoId", carritoId);
}

settings {
  encodeUrl: true
  timeout: 0
}
