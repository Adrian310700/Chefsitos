# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts, tsx, js, jsx}]
quote_type = single
ij_typescript_use_double_quotes = false

[*.java]
indent_size = 2

[*.{json,yaml,yml}]
  indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

[*.{min.js,git}]
indent_style = ignore
trim_trailing_whitespace = ignore
